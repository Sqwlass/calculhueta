python import iris_sdk def connect_to_exchange(api_key, secret_key): iris = iris_sdk.connect(api_key, secret_key) iris.login() return iris def execute_trade(iris, command): trade_type, quantity, price = command.split()[1:] symbol = "BTC-USDT" # Замени на нужный символ if trade_type.lower() == "купить": side = "buy" elif trade_type.lower() == "продать": side = "sell" else: return "Я не понимаю эту команду. Пожалуйста, используй 'купить' или 'продать'." quantity = float(quantity) price = float(price.replace(",", ".")) order = iris.create_order(symbol=symbol, price=price, quantity=quantity, side=side) order.place() return f"Заявка на {trade_type.lower()} {quantity} по цене {price} успешно отправлена!" def cancel_order(iris, order_id): order = iris.get_order(order_id) order.cancel() return "Заявка успешно отменена!" def get_balance(iris): balance = iris.get_balance() return f"Текущий баланс: {balance}" def get_open_orders(iris): orders = iris.get_open_orders() if orders: return "Открытые заявки:\n" + "\n".join([str(order) for order in orders]) else: return "Нет открытых заявок." def get_trade_history(iris): trades = iris.get_trade_history() if trades: return "История торговли:\n" + "\n".join([str(trade) for trade in trades]) else: return "Нет записей в истории торговли." 
